<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="AlertresVer2.setupLocation"
             Title="User Information">
    <VerticalStackLayout Padding="10, 50, 10,10">
        <FlexLayout Margin="5" JustifyContent="SpaceAround">
            <Label FontSize="Body" Text="Setting up"></Label>
        </FlexLayout>
        <FlexLayout Direction="Column" Margin="5">
            <Label Text="Fill the following inputs"></Label>
        </FlexLayout>
        <FlexLayout Direction="Column">
            <Editor x:Name="lastNameEditor" Placeholder="Last Name"/>
            <Editor x:Name="firstNameEditor" Placeholder="First Name"/>
            <Picker x:Name="provincePicker" Title="Choose Province"/>
            <Picker x:Name="citymunicipalityPicker" Title="Choose City/Municipality"/>
            <Editor x:Name="addressEditor" Placeholder="Address"/>
        </FlexLayout>
        <FlexLayout JustifyContent="End">
            <Button x:Name="nextButton" Text="Next"></Button>
        </FlexLayout>
    </VerticalStackLayout>
    <!-- BackgroundColor="White" -->
</ContentPage>